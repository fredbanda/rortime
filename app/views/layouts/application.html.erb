              <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link text-white" %></li>
              <li class="nav-item"><%= link_to "About Me", about_path, class: "nav-link text-white" %></li>
              <li class="nav-item"><%= link_to "Contact Me", contact_path, class: "nav-link text-white" %></li>
            </ul>
          </div>
        </nav>
      <!-- Content -->
    <%= yield %>

  <footer class="small text-muted">
    <div class="container">
      <center> <p>&copy Fred Banda 2023. All Rights Reserved</p></center>
